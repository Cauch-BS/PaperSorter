# --- Postgres ---
POSTGRES_HOST='db'
POSTGRES_PORT=5432
POSTGRES_USER='papersorter'
POSTGRES_DB='papersorter'
POSTGRES_PASSWORD='your_secure_password_here'

# --- Web interface ---
WEB_BASE_URL='http://localhost:5001'
FLASK_SECRET_KEY='your_secret_key_here'

# --- OAuth Configuration ---
# Google OAuth (for web interface)
GOOGLE_CLIENT_ID='your_google_client_id_here'
GOOGLE_CLIENT_SECRET='your_google_client_secret_here'

# GitHub OAuth (optional)
GITHUB_CLIENT_ID='your_github_client_id_here'
GITHUB_CLIENT_SECRET='your_github_client_secret_here'

# ORCID OAuth (optional, essential for academic users)
ORCID_CLIENT_ID='your_orcid_client_id_here'
ORCID_CLIENT_SECRET='your_orcid_client_secret_here'
ORCID_SANDBOX=false

# --- Embedding API ---
EMBEDDING_API_KEY='your_openai_api_key_here'
EMBEDDING_API_URL='https://api.openai.com/v1'
EMBEDDING_MODEL='text-embedding-3-large'
EMBEDDING_DIMENSIONS='1536'

# --- Summarization API ---
SUMMARIZATION_API_KEY='your_openai_api_key_here'
SUMMARIZATION_API_URL='https://api.openai.com/v1'
SUMMARIZATION_MODEL='gpt-4o-mini'

# --- Scholarly Database ---
# Provider: "semantic_scholar" or "openalex"
SCHOLARLY_PROVIDER='semantic_scholar'
MATCH_DATE_TOLERANCE_DAYS=60

# Semantic Scholar configuration
SEMANTIC_SCHOLAR_API_KEY='your_s2_api_key_here'
SEMANTIC_SCHOLAR_API_URL='https://api.semanticscholar.org/graph/v1/paper'
SEMANTIC_SCHOLAR_THROTTLE=1

# OpenAlex configuration
OPENALEX_EMAIL='your_real_email@domain.com'
OPENALEX_API_URL='https://api.openalex.org'
OPENALEX_THROTTLE=0.1

# --- SMTP Configuration (for email notifications) ---
SMTP_HOST='smtp.example.com'
SMTP_PORT=25
SMTP_USE_TLS=false
SMTP_USE_SSL=false
SMTP_TIMEOUT=30

# --- Email Notification Configuration ---
EMAIL_FROM_ADDRESS='papersorter@example.com'
EMAIL_FROM_NAME='PaperSorter Newsletter'
EMAIL_SUBJECT_TEMPLATE='Research Papers Digest - {date:%Y-%m-%d}'

# --- Storage (inside container). Backed by a named volume in Compose. ---
AI_POSTER_DIR=/app/ai_posters

# --- Admin Email ---
ADMIN_EMAIL=admin@domain.com
